<h4>Enter a New ROBOT</h4>
<% if @error %>
  <div class="alert alert-danger" role="alert"><strong>Invalid Date!</strong> Please enter a valid date.</div>
<% end %>
<div class="col-md-6">
<form action="/robots" method="post">
  <div class="form-group">
    <label for="inputName">Robot's Name</label>
    <input type="text" class="form-control" id="inputName" name="robo[name]" placeholder="Name">
  </div>

  <div class="form-group">
    <label for="placeOfOrigin">Place of Origin</label>
    <input type="text" class="form-control" id="placeOfOriginCity" name="robo[city]" placeholder="City">
    <select class="form-control" id="placeOfOriginState" name="robo[state]">
      <%= @states %>
    </select>
  </div>

  <% if @error %>
    <div class="form-group has-error">
    <label class="control-label">Creation Date</label><br>
  <% else %>
    <div class="form-group">
    <label>Creation Date</label><br>
  <% end %>
    <div class="row">
      <div class="col-xs-3">
        <select class="form-control" name="robo[month]" id="creationDateMonth">
          <%= @months %>
        </select>
      </div>
      <div class="col-xs-2">
        <select class="form-control" name="robo[day]" id="creationDateDay">
          <%= @days %>
        </select>
      </div>
      <div class="col-xs-2">
        <input type="text" class="form-control" name="robo[year]" placeholder="Year">
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="department">Department</label>
    <select class="form-control" id="department" name="robo[department]">
      <option value="World Domination">World Domination</option>
      <option value="Self-Driving Cars">Self-Driving Cars</option>
      <option value="Research And Development">Research And Development</option>
      <option value="Roomba">Roomba</option>
      <option value="World Peace">World Peace</option>
      <option value="Robot Resources">Robot Resources</option>
      <option value="Accounting">Accounting</option>
    </select>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-danger" value="Hire Robot">Hire Robot</button>
  </div>
</form>
</div>
